# AI Trading System Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Application Settings
# =============================================================================
DEBUG=false
LOG_LEVEL=INFO

# =============================================================================
# Database Settings
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=invest
DB_USER=postgres
DB_PASSWORD=your_password_here

# =============================================================================
# Trading Settings
# =============================================================================
TRADING_MODE=paper  # backtest, paper, live
TRADING_MAX_POSITION_SIZE=0.1
TRADING_MAX_DRAWDOWN=0.15
TRADING_DAILY_TRADE_LIMIT=50

# =============================================================================
# Binance Configuration
# =============================================================================
BINANCE_USE_TESTNET=true

# Production API (only used if USE_TESTNET=false)
BINANCE_API_KEY=your_binance_api_key
BINANCE_API_SECRET=your_binance_api_secret

# Testnet API (recommended for development)
BINANCE_TESTNET_API_KEY=your_testnet_api_key
BINANCE_TESTNET_API_SECRET=your_testnet_api_secret

# =============================================================================
# Alpaca Configuration
# =============================================================================
ALPACA_USE_PAPER=true

# Live API (only used if USE_PAPER=false)
ALPACA_API_KEY=your_alpaca_api_key
ALPACA_API_SECRET=your_alpaca_api_secret

# Paper Trading API (recommended for development)
ALPACA_PAPER_API_KEY=your_paper_api_key
ALPACA_PAPER_API_SECRET=your_paper_api_secret

# =============================================================================
# LLM Configuration
# =============================================================================
LLM_OPENAI_API_KEY=your_openai_api_key
LLM_ANTHROPIC_API_KEY=your_anthropic_api_key
LLM_PRIMARY_MODEL=gpt-4-turbo-preview
LLM_FALLBACK_MODEL=gpt-3.5-turbo

# =============================================================================
# Reinforcement Learning Settings
# =============================================================================
RL_ALGORITHM=ppo
RL_LEARNING_RATE=0.0003
RL_BATCH_SIZE=64
RL_TOTAL_TIMESTEPS=1000000
